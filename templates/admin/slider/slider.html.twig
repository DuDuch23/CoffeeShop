{% extends 'nav_admin.html.twig' %}

{% block title %}Liste des Sliders{% endblock %}

{% block body %}
<div class="top">
    <h1>Liste des Sliders</h1>
    <a href="{{ path('admin_sliders_add') }}" style="text-align: center; display: flex; justify-content: center; align-items: center;">Ajouter un slider</a>
</div>
    <style>
        .top{
            display: flex;
            justify-content: space-between;
        }

        table{
            border-collapse: collapse;
        }

        thead{
            background: #878787;
        }

        tr{
            height: 70px;
        }

        th, td{
            border: 1px solid black;
            padding: 10px;
            vertical-align: top;
            text-align: center;
        }

        td{
            background: #d9d9d9;
        }
    </style>

    <table>
        <thead>
            <tr>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Texte bouton</th>
                <th>Lien bouton</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for slider in sliders %}
            <tr>
                <td>{{ slider.title }}</td>
                <td style="width: 40%;">{{ slider.content }}</td>
                <td>{{ slider.buttonText }}</td>
                <td>{{ slider.buttonLink }}</td>
                <td>
                    <a href="{{ path('admin_sliders_edit', {id: slider.id}) }}">Modifier</a>
                    <form action="{{ path('admin_sliders_delete', {id: slider.id}) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token('delete-slider') }}">
                        <input type="submit" value="Supprimer">
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}