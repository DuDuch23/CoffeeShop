{% extends 'nav_admin.html.twig' %}

{% block title %}Liste des Contact{% endblock %}

{% block body %}
<div class="top">
    <h1 class="h1">Liste des Contacts</h1>
    <form class="form-group" action="{{ path('admin_contact_add') }}" method="post">
        <input class="btn btn-add" type="submit" value="Ajouter un contact">
    </form>
</div>
    <style>
        .top{
            display: flex;
            justify-content: space-between;
        }

        .btn-add{
            height: 100%;
        }

        table{
            border-collapse: collapse;
        }

        thead{
            background: #878787;
        }

        tr{
            height: 70px;
        }

        th, td{
            border: 1px solid black;
            padding: 10px;
            vertical-align: top;
            text-align: center;
        }

        td{
            background: #d9d9d9;
        }
    </style>

    <table class="table table-striped table-hover mt-4">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom de famille</th>
                <th scope="col">Prénom</th>
                <th scope="col">Email</th>
                <th scope="col">Numéro de téléphone</th>
                <th scope="col">Message</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
            <tr>
                <th scope="row">1</th>
                <td>{{ contact.lastName }}</td>
                <td>{{ contact.firstName }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.phone }}</td>
                <td>{{ contact.message }}</td>
                <td>
                    <form class="form-group" action="{{ path('admin_contacts_edit', {id: contact.id}) }}" method="post">
                        <input class="btn" type="submit" value="Modifier">
                    </form>
                    <form action="{{ path('admin_contact_delete', {id: contact.id}) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token('delete-contact') }}">
                        <input class="btn" type="submit" value="Supprimer">
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}