{% extends 'nav_admin.html.twig' %}

{% block title %}Liste des Marques{% endblock %}

{% block body %}
<div class="top">
    <h1 class="h1">Liste des Marques</h1>
    <form class="form-group" action="{{ path('admin_brands_add') }}" method="post">
        <input class="btn btn-add" type="submit" value="Ajouter une marque">
    </form>
</div>
    <style>
        .top{
            display: flex;
            justify-content: space-between;
        }

        .btn-add{
            height: 100%;
        }

        table{
            border-collapse: collapse;
        }

        thead{
            background: #878787;
        }

        tr{
            height: 70px;
        }

        th, td{
            border: 1px solid black;
            padding: 10px;
            vertical-align: top;
            text-align: center;
        }

        td{
            background: #d9d9d9;
        }
    </style>

    <table class="table table-striped table-hover mt-4">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for brand in brands %}
            <tr>
                <th scope="row">1</th>
                <td>{{ brand.name }}</td>
                <td>
                    <form class="form-group" action="{{ path('admin_brands_edit', {id: brand.id}) }}" method="post">
                        <input class="btn" type="submit" value="Modifier">
                    </form>
                    <form action="{{ path('admin_brands_delete', {id: brand.id}) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token('delete-brand') }}">
                        <input class="btn" type="submit" value="Supprimer">
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}