{% extends 'nav_admin.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
    <h1>Liste des Produits</h1>

    <style>
        table{
            border-collapse: collapse;
        }

        thead{
            background: #878787;
        }

        tr{
            height: 70px;
        }

        th, td{
            border: 1px solid black;
            padding: 10px;
            vertical-align: top;
            text-align: center;
        }

        td{
            background: #d9d9d9;
        }
    </style>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Famille</th>
                <th>Origine</th>
                <th>Note</th>
                <th>Prix</th>
                <th>Tendance</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
            <tr style="height: 70px;">
                <td>{{ product.name }}</td>
                <td style="width: 40%;">{{ product.description }}</td>
                <td>{{ product.family }}</td>
                <td>{{ product.country }}</td>
                <td>{{ product.note }} / 10</td>
                <td>{{ product.price }} â‚¬</td>
                {% if product.bestSeller == true %}
                    <td><img src="{{ asset('media/best_seller.gif') }}" style="width: 80px; height: 80px;" alt="best seller"></td>
                {% else %}
                    <td><img src="{{ asset('media/goofy.gif') }}" style="width: 80px; height: 80px;" alt="goofy"></td>
                {% endif %}
                <td></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}