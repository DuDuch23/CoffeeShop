{% extends "nav_admin.html.twig" %}

{% block title %}Ajouter un administrateur{% endblock %}

{% block body %}
<div class="top" style="display: flex; justify-content: space-between; align-items: center;">
    <h1>Ajouter un administrateur</h1>
    <a href="{{ path('admin_users_admins_index') }}">Retourner au tableau des administrateurs</a>
</div>

<div class="container">
    <h2>Nouvel administrateur</h2>
    {{ form_start(form) }}
    {{ form_row(form.email) }}
    {{ form_row(form.roles) }}
    {{ form_row(form.password) }}
    <button type="button" id="togglePassword"><img src="{{ asset('media/oeil.png') }}"></button>
    {{ form_end(form) }}
</div>

<script src="{{ asset('js/visibilityPassword.js') }}"></script>
{% endblock %}