{% extends "nav_admin.html.twig" %}

{% block title %}Modification d'un administrateur{% endblock %}

{% block body %}
<div class="top" style="display: flex; justify-content: space-between; align-items: center;">
    <h1 class="h1">Modification de l'administrateur "{{ admin.email }}"</h1>
    <a href="{{ path('admin_users_admins_index') }}">Retourner au tableau des administrateurs</a>
</div>

<div>
    {{ form_start(form) }}
        <div>
            {{ form_row(form.email) }}
            {{ form_row(form.roles) }}
        </div>
        <div>
            {{ form_row(form.password) }}
        </div>
    {{ form_end(form) }}
</div>

{% endblock %}